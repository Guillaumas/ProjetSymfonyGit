{% extends 'base.html.twig' %}

{% block title %}Gestion des chatons BDD{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Gestion des proprio BDD</h1>
        <table class="table table-striped">
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th></th>
            </tr>
            {% for p in proprietaire %}
                <tr>
                    <td>{{ p.nom }}</td>
                    <td>{{ p.prenom }}</td>
                    <td>
                        <a href="{{path("proprietaire_modifier",{"id":p.id})}}" class="btn btn-primary">modifier</a>
                        <a href="{{path("proprietaire_supprimer",{"id":p.id})}}" class="btn btn-danger">supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>

        <h2>Ajouter un proprietaire</h2>
        {{ form(formulaire) }}
    </div>
{% endblock %}
